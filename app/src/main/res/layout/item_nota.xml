<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_nota"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:src="@null" />

        <TextView
            android:id="@+id/tv_materia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@+id/iv_nota"
            android:maxLines="1"
            android:paddingLeft="8dp"
            android:textColor="@color/primaryText"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_sigla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_materia"
            android:layout_below="@+id/tv_materia"
            android:layout_toRightOf="@+id/iv_nota"
            android:paddingLeft="8dp"
            android:textColor="@color/primaryText"
            android:textSize="12sp" />

        <!--<View
            android:id="@+id/vw_divider"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_alignLeft="@+id/tv_sigla"
            android:layout_below="@+id/tv_sigla"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary" />-->

    </RelativeLayout>
</android.support.v7.widget.CardView>